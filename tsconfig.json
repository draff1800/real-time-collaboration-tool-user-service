// For Development

{
  "compilerOptions": {
    // Base Setup
    "module": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Performance
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildcache",
    "noEmit": true,

    // Type Definitions & APIs
    "lib": ["es2022"]
  },

  // Filter
  "include": ["src/**/*"]
}